{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "TW Mod Organizer",
	"version": "0.8.0",
	"identifier": "com.tw-mod-organizer",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "TW Mod Organizer",
				"width": 1100,
				"height": 610,
				"minWidth": 900,
				"minHeight": 610,
				"resizable": true,
				"useHttpsScheme": true,
				"decorations": false,
				"shadow": false,
				"transparent": true
			}
		],
		"security": {
			"csp": "default-src 'self' ipc: https://ipc.localhost asset: asset.localhost; img-src 'self' https: asset: asset.localhost data:; media-src 'self' https:; style-src 'self' 'unsafe-inline';",
			"assetProtocol": {
				"enable": true,
				"scope": [
					"**"
				]
			},
			"capabilities": [
				{
					"identifier": "main",
					"description": "Main application capabilities",
					"windows": [
						"main"
					],
					"permissions": [
						"core:default",
						"opener:default",
						"core:window:allow-toggle-maximize",
						"core:window:allow-unmaximize",
						"core:window:allow-minimize",
						"core:window:allow-close",
						"core:webview:allow-create-webview-window",
						"core:webview:allow-set-webview-size",
						"sql:default",
						"sql:allow-execute",
						"dialog:default",
						"deep-link:default"
					]
				},
				{
					"identifier": "nexus-mods",
					"description": "Nexus Mods webview capabilities",
					"windows": [
						"nexus-mods"
					],
					"permissions": [
						"core:default"
					]
				}
			]
		}
	},
	"bundle": {
		"active": true,
		"targets": "msi",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": [
			"./third_party_licenses.txt",
			"./schema_wh3.ron",
			"./schema_wh2.ron",
			"./schema_3k.ron",
			"./steam_api64.dll",
			"./steam_api64.lib"
		],
		"windows": {
			"webviewInstallMode": {
				"type": "embedBootstrapper"
			}
		}
	},
	"plugins": {
		"deep-link": {
			"schema": "nxm",
			"desktop": {
				"schemes": [
					"nxm"
				]
			}
		}
	}
}
